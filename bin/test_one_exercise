#!/bin/sh

die() {
    printf "\033[31m%s\n\033[0m" "$@" >&2
    exit 1
}

if [ "$#" -ne 1 ]; then
    script=$(basename "$0")
    die "usage: $script path/to/exercise" \
        "example: $script exercises/practice/hello-world"
fi
exercise=${1%/}
exercise=${exercise##*/}

echo
echo "*** Test exercise $exercise:"
echo

FAILED=0
solution=".meta/example.tcl"

cd "$1" >/dev/null || die " - cannot cd $1"

if [ ! -e "$solution" ]; then
    FAILED=1
    die " - $exercise: Missing ${solution}!"
fi

if [ ! -e "$exercise.test" ]; then
    FAILED=1
    die " - $exercise: Missing $exercise.test!"
fi

cleanup() {
    # restore exercise
    git checkout "$exercise.tcl"
}
trap cleanup EXIT

cp "$solution" "$exercise.tcl"
tclsh "$exercise.test"
echo

[ "$FAILED" -eq 0 ] || exit 1
